{
    "name": "sensea/snoezelen-api",
    "description": "API for Snoezelen session tracking",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "firebase/php-jwt": "^6.10",
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "migrate": "php migrations/migrate.php",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
