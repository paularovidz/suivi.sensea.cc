# Database
DB_HOST=localhost
DB_NAME=snoezelen_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# JWT Secrets (generate with: openssl rand -hex 64)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# Mail configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=
MAIL_FROM=noreply@sensea.cc
MAIL_FROM_NAME=Sensea Snoezelen

# Application URLs
APP_URL=https://suivi.sensea.cc/api
FRONTEND_URL=https://suivi.sensea.cc

# Environment
ENV=development
DEBUG=true

# Rate limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Timezone
APP_TIMEZONE=Europe/Paris

# ============================================
# BOOKING SYSTEM
# ============================================

# Google Calendar iCal URL for availability checking
GOOGLE_ICAL_URL=https://calendar.google.com/calendar/ical/paularovids%40gmail.com/public/basic.ics

# Admin emails for booking notifications (comma-separated)
BOOKING_ADMIN_EMAILS=admin@sensea.cc

# OVH SMS API (optional - for appointment reminders)
# Get credentials from: https://api.ovh.com/createToken/
OVH_SMS_APP_KEY=
OVH_SMS_APP_SECRET=
OVH_SMS_CONSUMER_KEY=
OVH_SMS_SERVICE_NAME=
